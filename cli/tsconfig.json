{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["lib", "bin"]
}
